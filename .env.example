# Example environment variables for Health Score API
# Copy this file to .env and adjust the values as needed

# Application settings
SECRET_KEY="your-secret-key-for-jwt-signing"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database settings
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/health_score_db"
# For SQLite (development only): DATABASE_URL="sqlite+aiosqlite:///./health_score.db"

# AWS credentials for DynamoDB logging
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-west-2"
DYNAMODB_TABLE_NAME="health-score-logs"

# CORS settings (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS="*"

# Docker PostgreSQL credentials (match these with docker-compose.yml if using Docker)
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="health_score_db"
POSTGRES_HOST="db"
POSTGRES_PORT="5432"
